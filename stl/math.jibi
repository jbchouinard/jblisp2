(defn sign (x) (cond
    ((> x 0) 1)
    ((< x 0) -1)
    (else 0)))

(defn abs (x) (* x (sign x)))

(defn sum (lst) (apply + lst))

(defn product (lst) (apply * lst))

(defn factorial (n) (fold * 1 (range 1 (+ n 1))))

(defn remainder (x y)
    (- x (* y (/ x y))))

(defn even? (x)
    (equal? 0 (remainder x 2)))

(defn odd? (x)
    (not (even? x)))

(defn pow (x y)
    (cond
        ((equal? y 0) 1)
        ((even? y) (pow (* x x) (/ y 2)))
        (true (* x (pow x (- y 1))))))
