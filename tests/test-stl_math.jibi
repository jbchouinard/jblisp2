(import "stl/math" as math)
(import-from "stl/unittest"
    test
    test-suite
    assert-equal
    assert-not
)

(test-suite "stl/math"
    (test "sum"
        (assert-equal 1234 (math::sum (list 1000 200 30 4))))

    (test "product"
        (assert-equal (* 1 2 3 4 5) (math::product (list 1 2 3 4 5))))

    (test "factorial"
        (assert-equal (* 1 2 3 4 5) (math::factorial 5)))

    (test "remainder"
        (assert-equal 7 (math::remainder 47 10)))

    (test "even?"
        (assert (math::even? 1006)))

    (test "not even?"
        (assert-not (math::even? 1009)))

    (test "odd?"
        (assert (math::odd? 3)))

    (test "not odd?"
        (assert-not (math::odd? 2)))

    (test "pow"
        (assert-equal 1024 (math::pow 2 10)))
)