(import-from "stl/unittest"
    test
    test-suite
    assert-raise
    assert-equal
)

(test-suite "lang/bindings"
    (test "let bindings"
        (assert-equal 110
            (let ((x 100) (y 10))
                (+ x y))))

    (test "set! unbound raises error"
        (assert-raise (set! unbound)))

    (def x 10)
    (test "set! changes local binding"
        (let ((x 0)) (set! x 7))
        (assert-equal 10 x))
)